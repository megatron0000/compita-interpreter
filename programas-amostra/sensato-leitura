program Leitura {

  functions:

  main {
    local:
    int a;
    int a2;
    char b;
    logic d;
    statements:
    write("Digite dois ints:");
    read(a, a2);
    write("Voce digitou ", a, " e ", a2, "\n");
    write("Digite um char:");
    read(b, b);
    write("Voce digitou ", b, "\n");
    write("Digite um bool (forma numerica):");
    read(d);
    write("Voce digitou ", d, "\n");
  }
}